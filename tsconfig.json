{
  "compilerOptions": {
      // Target latest version of ECMAScript.
      "target": "es5",
      "strict": true,
      "isolatedModules": false,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "declaration": false,
      "lib": ["es6", "es2017", "es2020", "ESNext"],
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "outDir": ".",
      "noEmit": false,
      "noEmitOnError": false,
      "removeComments": true,
      "resolveJsonModule": true,
      "rootDir": "src",
      "strictNullChecks": true,
      "downlevelIteration": true,
      "skipLibCheck": true,
    },
    "include": ["src/**/*", "**/*.d.ts"],
    "exclude": ["node_modules/*", "node_modules", "**/__tests__/**/*.test.ts", "**/__mocks__/**/*.ts", "dist"]
}
